<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:text="Weather Update"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_Get"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="#0070c7"
            android:textColor="@color/white"
            android:onClick="getWeatherDetails"
            android:text="Click Get Weather For \nNew City"
            android:layout_marginTop="40dp"
            android:backgroundTint="@null"
            android:textSize="25dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <TextView
                android:id="@+id/tvResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#F0F0F0"
                android:textSize="16dp"/>

        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">

            <TextView
                android:id="@+id/lat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lat"
                android:textSize="20dp"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="30dp"/>

            <TextView
                android:id="@+id/latleft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lat Left"
                android:textSize="20dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@id/lat"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/lan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lan"
                android:textSize="20dp"
                android:layout_below="@id/lat"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"/>

            <TextView
                android:id="@+id/lanleft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lan Left"
                android:textSize="20dp"
                android:layout_below="@id/latleft"
                android:layout_toEndOf="@id/lan"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"/>

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>
